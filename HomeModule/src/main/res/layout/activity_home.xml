<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <com.amap.api.maps.MapView

            android:id="@+id/home_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.example.bawei.homemodule.ui.BottomActionView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:bottom_img1="@drawable/tongxunlu"
            app:bottom_img2="@drawable/startas"
            app:bottom_img3="@drawable/duanxing"
            app:bottom_img4="@drawable/xiangji"
            app:bottom_img5="@drawable/pengy"
            android:layout_margin="20dp"
            android:id="@+id/home_bav"/>
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/lianxi"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/img_group1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/grouppic"
                />

            <ImageView
                android:id="@+id/img_group2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/grouppic"
                />

            <ImageView
                android:id="@+id/img_group3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/grouppic"
                />

            <ImageView
                android:id="@+id/img_group4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/grouppic"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/lianxix"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lianxiren"/>


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lianxiren2"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lianxiren3"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lianxiren4"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lianxiren5"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shenglvehao"/>

        </LinearLayout>
        <LinearLayout
            android:alpha="0.9"
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/pop"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#fff"
                android:text="我的活动"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#fff"
                android:layout_marginTop="5dp"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_Recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <com.example.bawei.basemodel.widget.StatusBarView
            android:background="#928E8E"
            android:alpha="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>
